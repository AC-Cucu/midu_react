<!-- Enlazar DTD local -->
<!-- <!DOCTYPE configuracion_web SYSTEM "configuracion_web.dtd"> -->

<!-- Enlazar XSD local como xsi -->
<!-- <configuracion_web xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="configuracion_web.xsd"> -->

 <!-- Enlazar XSD local como XML Model -->
<?xml-model href="configuracion_web.xsd"?>
<configuracion_web>
    <sitio>
        <nombre>CucuSoft</nombre>
        <dominio>www.cucusoft.com</dominio>
        <tecnologias>
            <tecnologia>HTML</tecnologia>
            <tecnologia>JS</tecnologia>
            <tecnologia>Node.js</tecnologia>
        </tecnologias>
        <secciones>
            <seccion>Inicio</seccion>
            <seccion>Blog</seccion>
            <seccion>Contacto</seccion>
        </secciones>
        <configuracion_servidor>
            <puerto>8080</puerto>
            <base_datos>PostgreSQL</base_datos>
        </configuracion_servidor>    
    </sitio>
</configuracion_web>
